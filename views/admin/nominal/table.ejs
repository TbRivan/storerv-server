<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th style="width: 10%">No</th>
      <th style="width: 25%">Coin Name</th>
      <th style="width: 20%">Quantity</th>
      <th style="width: 20%">Price</th>
      <th style="width: 25%">Action</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < nominal.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= nominal[i].coinName %></td>
      <td><%= nominal[i].coinQuantity %></td>
      <td><%= nominal[i].price %></td>
      <td>
        <form
          action="/nominal/delete/<%= nominal[i]._id %>?_method=DELETE"
          method="POST"
        >
          <a
            href="/nominal/edit/<%= nominal[i]._id %>"
            class="btn btn-app bg-info"
            ><i class="fas fa-pencil-alt"></i>Update</a
          >
          <button class="btn btn-app bg-danger">
            <i class="fas fa-trash"></i>Delete
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>

<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th style="width: 10%">No</th>
      <th style="width: 25%">Account Holder</th>
      <th style="width: 20%">Bank Name</th>
      <th style="width: 20%">Account Number</th>
      <th style="width: 25%">Action</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < bank.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= bank[i].name %></td>
      <td><%= bank[i].bankName %></td>
      <td><%= bank[i].noRekening %></td>
      <td>
        <form
          action="/bank/delete/<%= bank[i]._id %>?_method=DELETE"
          method="POST"
        >
          <a href="/bank/edit/<%= bank[i]._id %>" class="btn btn-app bg-info"
            ><i class="fas fa-pencil-alt"></i>Update</a
          >
          <button class="btn btn-app bg-danger">
            <i class="fas fa-trash"></i>Delete
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
